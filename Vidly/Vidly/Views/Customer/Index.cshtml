@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Count == 0)
{
    <h2>Customers</h2>
    <h4>We don't have customers yet!</h4>
}
else
{
    <table class="table table-hover table-condensed">
        <caption class="text-primary h2">Customers</caption>
        <thead>
        <tr>
            <th class="text-info h3">Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td class="text-success h4">@Html.ActionLink($"{@customer.Name}", "Details", "Customer", new { id = customer.Id }, null)</td>
            </tr>
        }
        </tbody>
    </table>
}
