@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<div class="well alert-info">
    <h2>@Model.Name</h2>
    @if (Model.Birthdate != null)
    {
        <p class="h4">Date of Birth: @Model.Birthdate.Value.ToShortDateString()</p>
    }
    <p class="h4">Membership Type: @Model.MembershipType.Name</p>
    @if (Model.IsSubscribedToNewsLetter)
    {
    <p class="h4">Subscribed to NewsLetter: Yes</p>
    }
    else
    {
    <p class="h4">Subscribed to NewsLetter: No</p>
    }
</div>


