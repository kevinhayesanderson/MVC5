@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<div class="well alert-info">
    <h2>@Model.Name</h2>
    <p class="h4">Genre: @Model.Genre.Name</p>
    <p class="h4">Release Date: @Model.ReleaseDate.ToLongDateString()</p>
    <p class="h4">Date Added: @Model.DateAdded.ToLongDateString()</p>
    <p class="h4">Number in Stock: @Model.NumberInStock</p>
</div>

